{
    "name": "Wallpad Controller with RS485",
    "version": "0.0.1",
    "slug": "contoller",
    "description": "Wallpad Controller for Homeassistant",
    "arch": [
        "armhf",
        "armv7",
        "aarch64",
        "amd64",
        "i386"
    ],
    "url": "https://github.com/nicejinhyun/WallpadController",
